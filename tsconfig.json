{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2019"],
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules", "out", ".vscode-test"]
}
